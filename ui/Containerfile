# Stage 1: Build React app with Node.js
FROM quay.io/fedora/fedora:42 as builder

# Install Node.js and dependencies
RUN dnf install -y nodejs npm

WORKDIR /app

# Pass API URL as build argument & set env var for React
ARG REACT_APP_API_URL=http://localhost:8000
ENV REACT_APP_API_URL=${REACT_APP_API_URL}

# Copy package files and install dependencies (cache optimization)
COPY package.json package-lock.json ./
RUN npm ci

# Copy all source files
COPY . .

# Build optimized production files
RUN npm run build

# Stage 2: Serve with Nginx (using Red Hat UBI base)
FROM registry.access.redhat.com/ubi9/nginx-126:latest

LABEL \
    name="Game Sorter UI" \
    description="Frontend for the Game Sorter" \
    summary="Game Sorter UI"

# Copy static build files into Nginx's root directory
COPY --from=builder /app/build /opt/app-root/src


# Redirect logs to stdout/stderr for Docker logging
RUN ln -sf /dev/stdout /var/log/nginx/access.log \
 && ln -sf /dev/stderr /var/log/nginx/error.log

# Expose HTTP port (optional, but good practice)
EXPOSE 8080

# Start Nginx in foreground
CMD ["nginx", "-g", "daemon off;"]

